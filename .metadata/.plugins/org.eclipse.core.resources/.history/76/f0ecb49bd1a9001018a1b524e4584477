#include <hal_gpio.h>
#include <hal_general.h>

#include <stdint.h>  // for uint32_t or other variables

void setUp();

void main(void)
{
    WDTCTL = WDTPW | WDTHOLD;	// stop watchdog timer
    enableInterrupts();
    hal_init();
    setUp();

    while (1)
    {

    }
}

void setUp()
{
    TB0CTL |= (1<<9);
    TB0CTL |= ((1<<7) + (1<<6));
    TB0CTL |= (1<<4);
    TB0CTL |= (1<<1);

    TB0CCR0 = 19531; // 2.5MHz/(8*8) * 0,5 (sind die 2Hz)
    TB0EX0 = 0b111;  // extension
    TB0CCTL0 = CCIE;  // Interrupt aktivieren

    __enable_interrupt();
}


#pragma vector=TIMERB0_VECTOR
__interrupt void TimerB0(void)
{
    static int cnt = 0;

    if(cnt == 0)
    {
        cnt = 1;
        LCD_BL_ON();
    }
    else if(cnt == 1)
    {
        cnt = 0;
        LCD_BL_OFF();
    }
}

