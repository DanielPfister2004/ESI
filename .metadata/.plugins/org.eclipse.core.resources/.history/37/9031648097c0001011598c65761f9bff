#include <hal_gpio.h>
#include <hal_general.h>
#include <dl_General.h>


#include <stdint.h>  // for uint32_t or other variables

#define BYTE1 'AA'
#define BYTE2 'CC'

void main(void)
{
    hal_init();
    //dl_Init();
    //LCD_BL_ON();
    extern USCIB1_SPICom LCD;

    LCD.Status.TxSuc = 1;

    while (1)
    {
        if (LCD.Status.TxSuc)
        {
            // LCD.Status.TxSuc = 0;

            LCD.TxData.len = 4;
            LCD.TxData.Data[0] = 0xAA;
            LCD.TxData.Data[1] = 0xCC;

            hal_USCIB1Transmit();
        }
    }
}


